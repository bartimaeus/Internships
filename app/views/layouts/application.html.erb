<!DOCTYPE html>
<html>
<head>
  <title>Internships</title>
  	
	<link rel="stylesheet" href="/javascripts/chosen/chosen.css" />
	<%= stylesheet_link_tag "all" %>
		<% if params[:action] =="myguide" %>
			<link rel="stylesheet" href="/myguide_asset/css/reset.css" /> 
			<link rel="stylesheet" href="/myguide_asset/css/text.css" /> 
			<link rel="stylesheet" href="/myguide_asset/css/fluid_grid_24.css" /> 
			<link rel="stylesheet" href="/myguide_asset/css/smoothness/jquery-ui-1.8.14.custom.css" /> 
			<link rel="stylesheet" href="/myguide_asset/css/application.css" /> 
		<% end %>

  		<%= javascript_include_tag "jquery.min.js", "jquery-ui.min.js" %>
		<%= javascript_include_tag "DataTables/jquery.dataTables.min.js", "jquery.uniform.js","tinyeditor/tiny_mce.js" %>
		
		<%= javascript_include_tag "rails.js" %>
		
		<% if params[:action] =="myguide" %>
			<script src="/myguide_asset/js/jquery-1.5.1.min.js" type="text/javascript"></script>
			<script src="/myguide_asset/js/jquery-ui-1.8.14.custom.min.js" type="text/javascript"></script>
			<script src="/myguide_asset/js/data.js" type="text/javascript"></script>
			<script src="/myguide_asset/js/application.js" type="text/javascript"></script>
		<% end %>
		
		<%= javascript_include_tag "chosen/chosen.jquery.js" %>
		<%= javascript_include_tag "application.js" %>
	
  	<%= csrf_meta_tag %>
	
	<% # Google Anyalytics ------ %>
	<% if request.host == 'sap.byu.edu' %>
		<script type="text/javascript">

		  var _gaq = _gaq || [];
		  _gaq.push(['_setAccount', 'UA-27027970-1']);
		  _gaq.push(['_trackPageview']);

		  (function() {
		    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		  })();

		</script>
	<% end %>
</head>
<body orient="portrait" style="min-height: 420px; min-width: 320px;">
	<div id="wrapper">
		<div id="sidebar">
			<%= render 'layouts/sidebar'%>
		</div><!-- #sidebar -->
		<div id="main_container" class="main_container container_16 clearfix">
			<div id="nav_top" class="clearfix  round_top">
				<%= render 'layouts/nav_top_' + @section %>
			</div><!-- #nav_top -->
		
			<%= system_messages flash %>			

			<div class="flat_area ">
				<%= yield %>
			</div>	
		</div>
	</div>
</body>
</html>
