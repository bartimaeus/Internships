<h2>States</h2>
<div class="box round_all">
	<table class="display datatable index_tables">
  		<thead>
  			<tr>
			    <th>Name</th>
			    <th colspan="3">Actions</th>
			</tr>
		</thead>
		<tbody>
			<% @states.each do |state| %>
  			<tr>
			    <td><%= state.name %></td>
			    <td>
					<%= link_to state do %>
						<button class="skin_colour round_all">
							<img src="<%= icon_path %>/Document.png" alt="View this state" />
						</button>
					<% end %>
				</td>
		    	<td>
					<%= link_to edit_state_path(state) do %>
						<button class="skin_colour round_all">
							<img src="<%= icon_path %>/Pencil.png" alt="Edit this state" />
						</button>
					<% end %>
				</td>
		    	<td>
					<%= link_to state, :confirm => 'Are you sure?', :method => :delete do%>
						<button class="skin_colour round_all">
							<img alt="Delete this state" src="<%= icon_path %>/Trashcan.png" />
						</button>
					<% end %>
				</td>
			  </tr>
			<% end %>
		</tbody>
	</table>

	<br />

	<%= link_to new_state_path do %>
		<button class="skin_colour round_all">
			<img src="<%= icon_path %>/Document.png" alt="New State" />
			<span>New State</span>
		</button>
	<% end %>
	
</div>