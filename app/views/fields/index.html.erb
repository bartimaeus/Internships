<h2>Fields</h2>
<div class="box round_all">
	<table class="display datatable index_tables">
  		<thead>
  			<tr>
				<th>Name</th>
			    <th>Industry</th>
				<th colspan="3">Actions</th>
			</tr>
		</thead>
		<tbody>
			<% @fields.each do |field| %>
 			<tr>
    			<td><%= field.name %></td>
			    <td><%= field.industry.name %></td>
			    <td>
					<%= link_to field do %>
						<button class="skin_colour round_all">
							<img src="<%= icon_path %>/Document.png" alt="View this field" />
						</button>
					<% end %>
				</td>
		    	<td>
					<%= link_to edit_field_path(field) do %>
						<button class="skin_colour round_all">
							<img src="<%= icon_path %>/Pencil.png" alt="Edit this field" />
						</button>
					<% end %>
				</td>
		    	<td>
					<%= link_to field, :confirm => 'Are you sure?', :method => :delete do%>
						<button class="skin_colour round_all">
							<img alt="Delete this field" src="<%= icon_path %>/Trashcan.png" />
						</button>
					<% end %>
				</td>
  			</tr>
			<% end %>
		</tbody>
	</table>

	<br />

	<%= link_to new_field_path do %>
		<button class="skin_colour round_all">
			<img src="<%= icon_path %>/Document.png" alt="New Field" />
			<span>New Field</span>
		</button>
	<% end %>
</div>