<%= form_for(@provider_type) do |f| %>
  <% if @provider_type.errors.any? %>
    <div class="box grid_16 round_all">
		    <div class="alert alert_red">
					<img src="<%= icon_path %>/Alarm%20Bell.png" />
		      <strong><%= pluralize(@provider_type.errors.count, "error") %></strong> prohibited this internship from being saved:
		    </div>

		</div>
		<div class="box grid_16 round_all">
			<div class="alert_sub_red">
				<ul>
					<% @provider_type.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
				</ul>
			</div>
		</div>
  <% end %>

	<div class="actions grid_16">
		<% content_tag :button, :type => :submit, :class => "green round_all" do %>
			<%= image_tag "icons/small/white/Bended%20Arrow%20Right.png", :title => "submit!"%>
			<span>Save this Provider Type!</span>
		<% end %>
	</div>

	<div class="box grid_16 round_all">
		<div class="block">
	 	 <div class="field">
		    <%= f.label :name %>
		    <%= f.text_field :name %>
		  </div>
		</div>
	</div>
  
<% end %>
