		<div class="block">
  		<div class="field">
		    <%= f.label :name %>
		    <%= f.text_field :name %>
		  </div>
			<div class="field">
				<%= f.label :academic_focus_type_id %>
				<%= f.collection_select :academic_focus_type_id, AcademicFocusType.all, :id, :name %>
			</div>
		  	<div class="field">
				<%= f.label :department_id %>
				<%= f.collection_select :department_id, Department.all, :id, :name %>
