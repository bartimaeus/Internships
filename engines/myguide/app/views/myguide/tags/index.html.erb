<h1>Tags</h1>
<div class="box round_all">
	<table class="display datatable index_tables">
		<thead>		
		  <tr>
		    <th>Name</th>
		    <th></th>
		    <th></th>
		    <th></th>
		  </tr>
		</thead>
		<tbody>
			<% @tags.each do |tag| %>
			  <tr>
			    <td><%= tag.name %></td>
			    <td>
					<%= link_to tag do %>
						<button class="skin_colour round_all">
							<img src="<%= icon_path %>/Document.png" alt="View this Tag" />
						</button>
					<% end %>
				</td>
			    <td>
					<%= link_to edit_tag_path(tag) do %>
						<button class="skin_colour round_all">
							<img src="<%= icon_path %>/Pencil.png" alt="Edit this Tag" />
						</button>
					<% end %>
				</td>
			    <td>
					<%= link_to tag, :confirm => 'Are you sure?', :method => :delete do%>
						<button class="skin_colour round_all">
							<img src="<%= icon_path %>/Trashcan.png" alt="Delete this Tag" />
						</button>
					<% end %>
				</td>
			  </tr>
			<% end %>
		</tbody>
	</table>

	<br />
	
	<%= link_to new_tag_path do %>
		<button class="skin_colour round_all">
			<img src="<%= icon_path %>/Document.png" alt="New Tag" />
			<span>New Tag</span>
		</button>
	<% end %>
</div>
