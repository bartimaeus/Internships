<div id="top_bar">
	<button id="MapListToggle">View List</button>
	
	<button id="FilterToggle">Filters<span class="triangle_down"></span></button>
	
</div>
<div id="svg">
	<div id="svg-map">
		
	</div>
	<div id="dropdown">
		<ul></ul>
	</div>
	<div id="dialogs" style="display: none">
		
	</div>
	<img 	id="zoomout" style="position: fixed; bottom: 10px; right: 10px;" 	
			src="http://humadvisement.byu.edu/sites/default/files/menu_icons/Internet-Search_64x64.png" />
</div>
<div id="list">
	<table class="display datatable">
		<thead>
			<tr>
				<th>Name</th>
				<th>Provider</th>
				<th>Location</th>
				<th>Rating</th>
				<th>Recommended</th>
			</tr>
		</thead>
		<tbody id="list_view_body">

		</tbody>
	</table>
</div>

<div id="filters">
	<img id="close_button" src="http://humadvisement.byu.edu/sites/default/files/menu_icons/Exit_64x64.png">
	<form onSubmit = "return false">
		<div class="chosen">
			<label>Languages</label><br />
			<%= select_tag :languages, options_from_collection_for_select(Internships::Language.all, :id, :name), :multiple => true, :class => 'chosen' %><br /><br /><br />
			<label>Fields</label><br />
			<%= select_tag :fields, options_from_collection_for_select(Internships::Field.all, :id, :name), :multiple => true, :class => 'chosen' %><br /><br /><br />
			<label>Industries</label><br />
			<%= select_tag :industries, options_from_collection_for_select(Internships::Industry.all, :id, :name), :multiple => true, :class => 'chosen' %><br /><br /><br />
		</div>
		<div class="chosen">
			<label>Providers</label><br />
			<%= select_tag :providers, options_from_collection_for_select(Internships::Provider.all, :id, :name), :multiple => true, :class => 'chosen' %><br /><br /><br />
			<label>Major/Minor</label><br />
			<%= select_tag :academic_focuses, options_from_collection_for_select(Internships::AcademicFocus.all, :id, :name), :multiple => true, :class => 'chosen' %><br /><br /><br />
		</div>
		<div class="radios">
			<span class="title">For Credit:</span>
			<span class="radio"><input type="radio" name="for_credit" value="true" /> Yes</span>
			<span class="radio"><input type="radio" name="for_credit" value="false" /> No</span>
			<span class="radio"><input type="radio" name="for_credit" value="null" checked /> Either</span>
			<span class="title">Part Time:</span>
			<span class="radio"><input type="radio" name="part_time" value="true" /> Yes</span>
			<span class="radio"><input type="radio" name="part_time" value="false" /> No</span>
			<span class="radio"><input type="radio" name="part_time" value="null" checked /> Either</span>
			<span class="title">Full Time:</span>
			<span class="radio"><input type="radio" name="full_time" value="true" /> Yes</span>
			<span class="radio"><input type="radio" name="full_time" value="false" /> No</span>
			<span class="radio"><input type="radio" name="full_time" value="null" checked /> Either</span>
			<span class="title">US Citizenship:</span>
			<span class="radio"><input type="radio" name="us_citizenship" value="true" /> Yes</span>
			<span class="radio"><input type="radio" name="us_citizenship" value="false" /> No</span>
			<span class="radio"><input type="radio" name="us_citizenship" value="null" checked /> Either</span>
			<span class="title">Paid:</span>
			<span class="radio"><input type="radio" name="paid" value="true" /> Yes</span>
			<span class="radio"><input type="radio" name="paid" value="false" /> No</span>
			<span class="radio"><input type="radio" name="paid" value="null" checked /> Either</span>
		</div>	
		<div class="action_buttons">
			<button id="apply_filters">Apply Filters</button>
			<button id="reset_filters">Reset Filters</button>
		</div>
	</form>
</div>
