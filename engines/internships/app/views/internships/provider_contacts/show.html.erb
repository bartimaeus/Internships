<p id="notice"><%= notice %></p>

<div class="flat_area grid_16">
	<h2><%= @provider_contact.name %></h2>
	<span class="edit_links">
		<%= link_to 'Edit', edit_provider_contact_path(@provider_contact) %> |
		<%= link_to 'Back', provider_contacts_path %>
	</span>
</div>

<%= theme_box(8, "Basic Information") do %>

	<p>
	  <b>Email:</b>
	  <%= @provider_contact.email %>
	</p>

	<p>
	  <b>Phone:</b>
	  <%= @provider_contact.phone %>
	</p>

	<p>
	  <b>Fax:</b>
	  <%= @provider_contact.fax %>
	</p>

	<p>
	  <b>Can call:</b>
	  <%= @provider_contact.can_call %>
	</p>

	<p>
	  <b>Provider:</b>
	  <%= @provider_contact.provider.name %>
	</p>

<% end %>
